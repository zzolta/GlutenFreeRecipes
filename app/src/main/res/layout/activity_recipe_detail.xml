<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/recipe_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/recipe_detail_image"/>

        <TextView
                android:id="@+id/recipe_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/recipe_image"
                android:layout_alignStart="@+id/recipe_image"
                android:layout_alignTop="@+id/recipe_image"
                android:layout_alignRight="@+id/recipe_image"
                android:layout_alignEnd="@+id/recipe_image"
                android:layout_alignBottom="@+id/recipe_image"
                android:layout_margin="1dp"
                android:gravity="bottom|center_horizontal"
                android:textSize="48sp"
                android:textColor="#FFA500"/>
    </RelativeLayout>

    <ExpandableListView
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:groupIndicator="@null"
            android:layout_below="@+id/recipe_image">

    </ExpandableListView>
</LinearLayout>